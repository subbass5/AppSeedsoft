<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:background="@color/bootstrap_brand_primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/background_state"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/bootstrap_gray_light"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_state"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:src="@drawable/doorclose" />
            <Spinner
                android:id="@+id/sp_name"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Door Office"
                    android:textColor="@color/bootstrap_brand_primary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_state_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.13"
                    android:text="Close"
                    android:textColor="@color/bootstrap_brand_primary"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="BLE Scanning.." />

            <Button
                android:id="@+id/btn_open_door"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/bootstrap_brand_primary"
                android:text="@string/btn_open"
                android:textColor="@color/bootstrap_brand_secondary_fill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/txt_state_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:background="#86d9dad9"
                    android:drawableLeft="@drawable/ic_connect"
                    android:gravity="right"
                    android:text="  Connected"
                    android:textAlignment="textEnd"
                    android:textColor="@color/bootstrap_brand_danger"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>